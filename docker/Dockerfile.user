# Build stage
FROM golang:1.25-alpine AS builder
WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

# Copy only required source
COPY cmd/services/v1/user ./cmd/services/v1/user
COPY internal/services/v1/user ./internal/services/v1/user
COPY internal/services/v1/auth ./internal/services/v1/auth
COPY internal/packages ./internal/packages
COPY internal/middlewares ./internal/middlewares

RUN go build -o user-service ./cmd/services/v1/user

# Final stage
FROM alpine:3.18
WORKDIR /app
COPY --from=builder /app/user-service .
EXPOSE 2001
CMD ["./user-service"]
